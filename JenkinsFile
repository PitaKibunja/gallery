pipeline {
    agent any

    stages {
        stage('Clone the repo') {
            steps {
                git 'https://github.com/PitaKibunja/gallery.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}
